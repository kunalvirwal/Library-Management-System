CREATE DATABASE sdslabs_kunal;

USE sdslabs_kunal;

CREATE TABLE books( BUID INT PRIMARY KEY AUTO_INCREMENT, NAME VARCHAR(50) NOT NULL, DESCRIPTION varchar(500), CHECKIN BOOLEAN NOT NULL DEFAULT 1 );

CREATE TABLE user( UUID INT PRIMARY KEY AUTO_INCREMENT, NAME VARCHAR(50), EMAIL VARCHAR(50), PHN_NO BIGINT, PASSWORD VARCHAR(100), ROLE VARCHAR(10) );

CREATE TABLE BORROWING_HISTORY(UUID INT, BUID INT , CHECKOUT_DATE DATETIME, CHECKIN_DATE DATETIME DEFAULT NULL );

CREATE TABLE PENDING_REQUESTS (UUID INT, BUID INT , TYPE BOOLEAN );

CREATE TABLE ADMIN_REQUESTS ( UUID INT PRIMARY KEY);

INSERT INTO USER VALUES(1,'admin','admin@sdslabs.com','9999999999',"A",'admin');